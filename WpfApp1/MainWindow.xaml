<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        
        
       
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="23"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" VerticalAlignment="Top">
            <MenuItem Header="Сущности">
                <MenuItem Header="Тип достижения" 
                          x:Name="typeP" Click="typeP_Click"/>
                <MenuItem Header="Студенты"
                          x:Name="studentsP" Click="studentsP_Click"/>
                <MenuItem Header="Достижения"
                          x:Name="achievements" Click="achievements_Click"/>
            </MenuItem>
                <MenuItem Header="Группировка"
                          x:Name="group" Click="group_Click"/>
        </Menu>

        <Frame Grid.Row="1" x:Name="PFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
